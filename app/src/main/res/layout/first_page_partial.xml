<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:layoutDirection="rtl"
        android:background="@color/list_bkg"
        android:layout_marginStart="10dp"
        android:id="@+id/linearLayout_partial">

        <TextView
                android:layoutDirection="rtl"
                android:layout_gravity="right"
                android:gravity="right"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView_firstPage_channel_title"/>


        <LinearLayout
                android:padding="10dp"
                android:background="@color/list_bkg"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:layout_gravity="right">
                <LinearLayout
                        android:background="@color/item_bkg"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:id="@+id/linearLayout_firstPage_news1"
                        android:visibility="gone">
                        <ImageView
                            android:paddingTop="10dp"
                            android:paddingRight="10dp"
                            android:id="@+id/imageView_firstPage_news1"
                            android:src="@drawable/thumbnail_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:padding="10dp"/>
                        <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layoutDirection="rtl">

                                <TextView
                                        android:layoutDirection="rtl"
                                        android:layout_gravity="right"
                                        android:gravity="right|center_vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Medium Text"
                                        android:id="@+id/textView_firstPage_news1_title"/>

                                <LinearLayout
                                        android:paddingTop="5dp"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:paddingLeft="15dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstPage_news1_resource" android:layout_gravity="right"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstPage_news1_dateTime" android:layout_gravity="right"/>
                                </LinearLayout>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:background="@color/item_bkg"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:id="@+id/linearLayout_firstPage_news2"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/imageView_firstPage_news2"
                            android:src="@drawable/thumbnail_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:padding="10dp"/>
                        <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layoutDirection="rtl">
                                <TextView
                                        android:layoutDirection="rtl"
                                        android:layout_gravity="right"
                                        android:gravity="right|center_vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Medium Text"
                                        android:id="@+id/textView_firstPage_news2_title"/>

                                <LinearLayout
                                        android:paddingTop="5dp"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:paddingLeft="15dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstpage_news2_resource" android:layout_gravity="right"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstPage_news2_dateTime" android:layout_gravity="right"/>
                                </LinearLayout>
                        </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:background="@color/item_bkg"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:id="@+id/linearLayout_firstPage_news3"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/imageView_firstPage_news3"
                            android:src="@drawable/thumbnail_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:padding="10dp"/>
                        <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layoutDirection="rtl">
                                <TextView
                                        android:layoutDirection="rtl"
                                        android:layout_gravity="right"
                                        android:gravity="right|center_vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="Medium Text"
                                        android:id="@+id/textView_firstPage_news3_title"/>
                                <LinearLayout
                                        android:paddingTop="5dp"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                                android:paddingLeft="15dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstpage_news3_resource" android:layout_gravity="right"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="?android:attr/textAppearanceSmall"
                                                android:id="@+id/textView_firstPage_news3_dateTime" android:layout_gravity="right"/>
                                </LinearLayout>
                        </LinearLayout>

                </LinearLayout>
        </LinearLayout>
        <TextView
                android:layoutDirection="ltr"
                android:layout_gravity="left"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="بیشتر"
                android:id="@+id/textView_firstPage_more" android:layout_marginLeft="10dp"
                android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingBottom="10dp"
                android:password="false" android:phoneNumber="false"/>

</LinearLayout>
