<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_gravity="center_horizontal">
<LinearLayout
            android:orientation="vertical"
            android:background="@color/list_bkg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".NewsListActivity$PlaceholderFragment"
            android:id="@+id/linearLayout_firstPage">
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar_fragment_news_list" android:layout_gravity="center_horizontal"/>
    <LinearLayout
            android:orientation="vertical"
            android:background="@color/list_bkg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:context=".NewsListActivity$PlaceholderFragment"
            android:id="@+id/linearLayout_firstPage_channels">

    </LinearLayout>

</LinearLayout>
</ScrollView>